<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhaobaoge.buy">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.zhaobaoge.buy.ui.SplashActivity"
            android:theme="@style/AppThemeFull">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zhaobaoge.buy.ui.index.IndexActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhaobaoge.buy.ui.user.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhaobaoge.buy.ui.user.register.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zhaobaoge.buy.ui.user.pass.PasssAcitivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>