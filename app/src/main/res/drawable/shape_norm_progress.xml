<?xml version="1.0" encoding="utf-8"?>
<animated-rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0.0"
    android:pivotX="50.0%"
    android:pivotY="50.0%"
    android:toDegrees="360.0">
    <shape
        android:innerRadiusRatio="3.0"
        android:shape="ring"
        android:thicknessRatio="20.0"
        android:useLevel="false">
        <gradient
            android:angle="180.0"
            android:centerColor="@color/color_norm_progress4"
            android:centerX="0.4"
            android:centerY="0.5"
            android:endColor="@color/color_norm_progress3"
            android:startColor="@color/color_norm_progress5"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</animated-rotate>