<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/linear_loading"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10.0dip">

    <LinearLayout
        android:layout_width="120.0dip"
        android:layout_height="120.0dip"
        android:background="@drawable/layer_list_all_corner_fbf7f6"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:id="@id/custom_dialog_progress"
            android:layout_width="52.0dip"
            android:layout_height="52.0dip"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/shape_norm_progress"
            android:indeterminateDuration="5000"
            android:visibility="visible" />

        <TextView
            android:id="@id/custom_dialog_progress_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10.0dip"
            android:text="加载中..."
            android:textColor="@color/color_black"
            android:textSize="12.0sp"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>