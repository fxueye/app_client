<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@id/linear_personal_module_user"
            android:layout_width="fill_parent"
            android:layout_height="150.0dip"
            android:background="@drawable/image_personal_user_bg_top"
            android:orientation="horizontal"
            android:paddingTop="0.0dip">

            <LinearLayout
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15.0dip"
                android:background="@drawable/shape_oval_half_ffffff_normal"
                android:gravity="center"
                android:padding="5.0dip">

                <LinearLayout
                    android:layout_width="70.0dip"
                    android:layout_height="70.0dip"
                    android:background="@drawable/shape_oval_ffffff_normal"
                    android:gravity="center">

                    <ImageView
                        android:id="@id/img_personal_user_logo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@id/tv_personal_login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录/注册"
                    android:textColor="@color/color_white"
                    android:textSize="18.0dip" />

                <TextView
                    android:id="@id/tv_personal_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="\ 18200132858"
                    android:textColor="@color/color_white"
                    android:textSize="18.0dip" />

                <LinearLayout
                    android:id="@id/linear_personal_save_money_base"
                    android:layout_width="wrap_content"
                    android:layout_height="22.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/shape_personal_money_bac"
                    android:gravity="center_vertical"
                    android:paddingLeft="1.0dip"
                    android:paddingRight="8.0dip">

                    <ImageView
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/icon_personal_money_bag" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2.0dip"
                        android:text="已为您省钱"
                        android:textColor="@color/color_norm_money1"
                        android:textSize="11.0dip" />

                    <TextView
                        android:id="@id/tv_personal_save_money_value"
                        android:layout_width="wrap_content"
                        android:layout_height="20.0dip"
                        android:layout_marginBottom="1.0dip"
                        android:layout_marginLeft="2.0dip"
                        android:text="100"
                        android:textColor="@color/color_norm_money"
                        android:textSize="15.0dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1.0dip"
                        android:text="元"
                        android:textColor="@color/color_norm_money1"
                        android:textSize="11.0dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/layout_personal_module_taobao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_personal_module_user"
            android:layout_marginTop="-10.0dip" />
    </RelativeLayout>
</LinearLayout>