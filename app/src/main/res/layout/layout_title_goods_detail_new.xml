<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:layout_alignParentTop="true"
    android:gravity="center">

    <View
        android:id="@id/view_title_bar_fix"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:alpha="0.3"
        android:background="@color/color_primary_statusbar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_below="@id/view_title_bar_fix"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/linear_title_bac"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0.0"
            android:background="@color/color_white"
            android:clickable="false"
            android:orientation="vertical"
            android:saveEnabled="false">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <include
                    layout="@layout/layout_wg_indicator_goods_detail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <View
                    android:id="@id/view_title_cut_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_divider_ud" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@id/relative_title_back"
                android:layout_width="30.0dip"
                android:layout_height="48.0dip"
                android:layout_marginLeft="10.0dip"
                android:gravity="center">

                <View
                    android:id="@id/view_title_left_bac"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_centerInParent="true"
                    android:alpha="0.3"
                    android:background="@drawable/shape_oval_000000_normal" />

                <LinearLayout
                    android:layout_width="30.0dip"
                    android:layout_height="48.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@id/image_title_left"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/icon_norm_back_white" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0" />

            <RelativeLayout
                android:id="@id/relative_title_share"
                android:layout_width="30.0dip"
                android:layout_height="48.0dip"
                android:gravity="center"
                android:visibility="visible">

                <View
                    android:id="@id/view_title_share_bac"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_centerInParent="true"
                    android:alpha="0.3"
                    android:background="@drawable/shape_oval_000000_normal" />

                <LinearLayout
                    android:layout_width="30.0dip"
                    android:layout_height="48.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@id/image_title_share"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/icon_norm_share_white" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/relative_title_more"
                android:layout_width="30.0dip"
                android:layout_height="48.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="10.0dip"
                android:gravity="center">

                <View
                    android:id="@id/view_title_right_bac"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_centerInParent="true"
                    android:alpha="0.3"
                    android:background="@drawable/shape_oval_000000_normal" />

                <LinearLayout
                    android:layout_width="30.0dip"
                    android:layout_height="48.0dip"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@id/image_title_right"
                        android:layout_width="20.0dip"
                        android:layout_height="20.0dip"
                        android:src="@drawable/icon_norm_more_white" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>