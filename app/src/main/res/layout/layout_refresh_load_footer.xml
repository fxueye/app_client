<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_norm_bac"
    android:orientation="vertical"
    android:paddingBottom="5.0dip"
    android:paddingTop="5.0dip">

    <LinearLayout
        android:id="@id/linear_foot_view_loading"
        android:layout_width="wrap_content"
        android:layout_height="40.0dip"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <ProgressBar
            android:id="@id/progress"
            android:layout_width="22.0dip"
            android:layout_height="22.0dip"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:indeterminateDrawable="@drawable/shape_norm_progress"
            android:indeterminateDuration="5000"
            android:visibility="visible" />

        <TextView
            android:id="@id/tv_load_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:text="正在加载..."
            android:textColor="@color/color_refresh_load"
            android:textSize="12.0sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/linear_foot_view_error"
        android:layout_width="wrap_content"
        android:layout_height="40.0dip"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1.0">

        <ImageView
            android:id="@id/iv_error_net"
            android:layout_width="24.0dip"
            android:layout_height="18.0dip"
            android:src="@drawable/icon_wifi_off"
            android:visibility="gone" />

        <TextView
            android:id="@id/tv_load_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:text=""
            android:textColor="@color/load_load_tv"
            android:textSize="12.0sp"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/linear_foot_view_end_normal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:minHeight="40.0dip"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@id/tv_load_end_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10.0dip"
            android:text=" "
            android:textColor="@color/load_load_tv"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/linear_foot_view_end_every_rush"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10.0dip"
        android:visibility="gone">

        <ImageView
            android:layout_width="110.0dip"
            android:layout_height="35.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/img_list_end_goods_on_the_road" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:text="超多好货正在路上..."
            android:textColor="@color/load_load_tv"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/linear_foot_view_end_every_rush_new_year"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:visibility="gone">

        <ImageView
            android:layout_width="125.0dip"
            android:layout_height="50.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/img_list_end_new_year" />
    </LinearLayout>
</LinearLayout>