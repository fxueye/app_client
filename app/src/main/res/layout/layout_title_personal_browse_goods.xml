<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@drawable/shape_norm_title_bac"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            layout="@layout/layout_icon_title_back_left_white"
            android:layout_width="45.0dip"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@id/tv_foot_goods_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/color_white"
            android:textSize="18.0dip" />

        <LinearLayout
            android:id="@id/linear_foot_goods_clear"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:src="@drawable/icon_title_record_delete_new" />
        </LinearLayout>

        <TextView
            android:id="@id/tv_fix_width"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <View
        android:id="@id/view_title_cut_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/color_divider_ud"
        android:visibility="gone" />
</LinearLayout>