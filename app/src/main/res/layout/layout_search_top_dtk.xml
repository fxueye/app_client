<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55.0dip"
    android:clickable="true"
    android:orientation="horizontal">

    <include
        layout="@layout/layout_icon_title_back_left_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1.0dip"
        android:layout_marginRight="45.0dip"
        android:layout_marginTop="5.0dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@id/relative_search_keyword_bac"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:layout_marginRight="3.0dip"
            android:background="@drawable/bac_search_case_1"
            android:clickable="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@id/search_tag"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="@null"
                android:src="@drawable/icon_search_pro"
                android:visibility="gone" />

            <LinearLayout
                android:id="@id/linear_search_keyword_bac"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="50.0dip"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="horizontal">

                <com.zhaobaoge.widget.CleanableEditText
                    android:id="@id/edt_search_keyword"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="1.0dip"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:drawableEnd="@drawable/icon_search_clear"
                    android:drawableRight="@drawable/icon_search_clear"
                    android:focusable="true"
                    android:hint="搜索"
                    android:imeOptions="actionSearch"
                    android:lines="1"
                    android:maxLength="60"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/color_goods_detail_name"
                    android:textColorHint="@color/color_text_hint"
                    android:textCursorDrawable="@null"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/linear_search_keyword_tv_bac"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="50.0dip"
                android:background="@color/color_white"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingRight="40.0dip"
                android:visibility="gone">

                <TextView
                    android:id="@id/tv_search_keyword"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:text=" "
                    android:textColor="@color/color_goods_detail_name"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@id/linear_right_icon_search"
            android:layout_width="59.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0.0dip"
            android:layout_marginTop="-1.0dip"
            android:background="@drawable/bac_search_button_2"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_right_search"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/color_pop_radio_text"
                android:textSize="14.0sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="center"
                android:layout_marginTop="1.0dip"
                android:src="@drawable/icon_search_pro" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>