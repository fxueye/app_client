<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:layout_alignParentTop="true"
    android:gravity="center">

    <View
        android:id="@id/view_title_bar_fix"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:alpha="0.3"
        android:background="@color/color_primary_statusbar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_below="@id/view_title_bar_fix">

        <LinearLayout
            android:id="@id/linear_title_bac"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="0.0"
            android:background="@color/color_primary_toolsbar"
            android:orientation="vertical">

            <TextView
                android:id="@id/tv_title_goods_name"
                android:layout_width="fill_parent"
                android:layout_height="47.0dip"
                android:layout_marginLeft="65.0dip"
                android:layout_marginRight="65.0dip"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textColor="@color/color_title"
                android:textIsSelectable="true"
                android:textSize="16.0sp" />

            <View
                android:id="@id/view_title_cut_line"
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/color_divider_ud" />
        </LinearLayout>

        <View
            android:id="@id/view_title_left_bac"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11.0dip"
            android:alpha="0.3"
            android:background="@drawable/shape_oval_000000_normal" />

        <LinearLayout
            android:id="@id/linear_title_left"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginLeft="5.0dip"
            android:gravity="center">

            <ImageView
                android:id="@id/image_title_left"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:src="@drawable/icon_title_back_white" />
        </LinearLayout>

        <View
            android:id="@id/view_title_right_bac"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11.0dip"
            android:alpha="0.3"
            android:background="@drawable/shape_oval_000000_normal" />

        <LinearLayout
            android:id="@id/linear_title_right"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5.0dip"
            android:gravity="center">

            <ImageView
                android:id="@id/image_title_right"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:src="@drawable/icon_title_more_white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>