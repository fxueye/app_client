<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_norm_bac"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:background="@color/color_norm_bac" />

    <ScrollView
        android:id="@id/scroll_header_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhaobaoge.widget.BetterRecyclerView
                android:id="@id/recycler_header_search"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_norm_bac"
                android:focusableInTouchMode="true" />

            <LinearLayout
                android:id="@id/linear_heard_sear_remind"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="10.0dip"
                android:paddingTop="10.0dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="你输入的关键词较为模糊"
                    android:textColor="@color/color_coupon_after"
                    android:textSize="13.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="10.0dip"
                    android:gravity="center_vertical"
                    android:text="为你筛选出以下商品"
                    android:textColor="@color/color_main_theme"
                    android:textSize="17.0sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>