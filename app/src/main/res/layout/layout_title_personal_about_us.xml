<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44.5dip"
        android:background="@color/color_primary_toolsbar"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            layout="@layout/layout_icon_title_back_left"
            android:layout_width="45.0dip"
            android:layout_height="fill_parent" />

        <TextView
            android:id="@id/tv_title_about_us"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="关于"
            android:textColor="@color/color_title"
            android:textSize="16.0sp" />

        <LinearLayout
            android:id="@id/linear_personal_about_us_share"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:src="@drawable/icon_title_about_share" />
        </LinearLayout>

        <TextView
            android:id="@id/tv_fix_width"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@id/view_title_cut_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/color_divider_ud" />
</LinearLayout>