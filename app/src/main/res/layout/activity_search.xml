<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true">

        <include
            android:id="@id/layout_search_top"
            layout="@layout/layout_title_search_result"
            android:layout_width="wrap_content"
            android:layout_height="48.0dip"
            android:clickable="true" />

        <include
            android:id="@id/layout_search_all_remind"
            layout="@layout/layout_search_all_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_search_top" />

        <include
            android:id="@id/layout_search_word_relative"
            layout="@layout/layout_search_word_complete_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/layout_search_top"
            android:clickable="true"
            android:visibility="gone" />

        <include
            android:id="@id/layout_search_result_list"
            layout="@layout/layout_search_result_list_all"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/layout_search_top"
            android:clickable="true"
            android:visibility="gone" />

        <include
            android:id="@id/layout_search_result_recommend"
            layout="@layout/layout_search_result_recommend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_search_top"
            android:clickable="true"
            android:visibility="gone" />

        <include
            layout="@layout/layout_status_loading"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/layout_search_top"
            android:clickable="true"
            android:visibility="gone" />

        <include
            layout="@layout/layout_status_error_reload"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/layout_search_top"
            android:clickable="true"
            android:visibility="gone" />
    </RelativeLayout>

    <include
        layout="@layout/layout_float_up_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30.0dip"
        android:layout_marginRight="20.0dip" />
</RelativeLayout>