<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--透明渐变的TabView-->
    <declare-styleable name="TabView">
        <attr name="tabIconNormal" format="reference" />
        <attr name="tabIconSelected" format="reference" />
        <attr name="tabText" format="string" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="textColorNormal" format="color" />
        <attr name="textColorSelected" format="color" />
        <attr name="badgeBackgroundColor" format="color" />
        <attr name="paddingTexwithIcon" format="dimension" />
    </declare-styleable>


    <!--圆形指示器-->
    <declare-styleable name="Circlevt_indicator">
        <attr name="ci_normalRadius" format="dimension" />
        <attr name="ci_normalRadiusColor" format="color" />
        <attr name="ci_selectedRadius" format="dimension" />
        <attr name="ci_selectedRadiusColor" format="color" />
        <attr name="ci_dotPadding" format="dimension" />
        <attr name="ci_isStroke" format="boolean" />
        <attr name="ci_normalStrokeWidth" format="dimension" />
        <attr name="ci_isBlink" format="boolean" />
    </declare-styleable>

    <!--Tab指示器-->
    <declare-styleable name="TabTitlevt_indicator">
        <attr name="tti_vt_indicatorHeight" format="dimension" />
        <attr name="tti_vt_indicatorColor" format="color" />
        <attr name="tti_underlineHeight" format="dimension" />
        <attr name="tti_underlineColor" format="color" />
        <attr name="tti_dividerWidth" format="dimension" />
        <attr name="tti_dividerPaddingTopBottom" format="dimension" />
        <attr name="tti_dividerColor" format="color" />
        <attr name="tti_triangleHeight" format="dimension" />
        <attr name="tti_tabPaddingLeftRight" format="dimension" />
        <attr name="tti_tabTextSizeNormal" format="dimension" />
        <attr name="tti_tabTextSizeSelected" format="dimension" />
        <attr name="tti_tabTextColorNormal" format="color" />
        <attr name="tti_tabTextColorSelected" format="color" />
        <attr name="tti_tabBackground" format="reference" />
        <attr name="tti_visibleCount" format="integer" />
        <attr name="tti_scrollOffset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TabScrollView">
        <attr name="IndicatorColor" format="color" />
        <attr name="UnderlineColor" format="color" />
        <attr name="DividerColor" format="color" />
        <attr name="IndicatorHeight" format="dimension" />
        <attr name="UnderlineHeight" format="dimension" />
        <attr name="DividerPadding" format="dimension" />
        <attr name="TabPaddingLeftRight" format="dimension" />
        <attr name="ScrollOffset" format="dimension" />
        <attr name="TabBackground" format="reference" />
        <attr name="ShouldExpand" format="boolean" />
        <attr name="TextAllCaps" format="boolean" />
    </declare-styleable>

    <!--圆形图片-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_BorderWidth" format="dimension" />
        <attr name="civ_BorderColor" format="color" />
        <attr name="civ_FillColor" format="color" />
        <attr name="civ_BorderOverlay" format="boolean" />
    </declare-styleable>


    <!--循环滑动的ViewPager-->
    <declare-styleable name="LoopViewPager">
        <attr name="lvp_isAutoLoop" format="boolean" />
        <attr name="lvp_delayTime" format="integer" />
    </declare-styleable>

    <declare-styleable name="VerticalTabLayout">
        <attr name="vt_indicator_color" format="color" />
        <attr name="vt_indicator_width" format="dimension" />
        <attr name="vt_indicator_corners" format="dimension" />
        <attr name="vt_indicator_gravity" format="enum">
            <enum name="left" value="3" />
            <enum name="right" value="5" />
            <enum name="fill" value="119" />
        </attr>
        <attr name="vt_tab_margin" format="dimension" />
        <attr name="vt_tab_mode" format="enum">
            <enum name="fixed" value="10" />
            <enum name="scrollable" value="11" />
        </attr>
        <attr name="vt_tab_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HorizontalTabLayout">
        <attr name="ht_indicator_color" format="color" />
        <attr name="ht_indicator_height" format="dimension" />
        <attr name="ht_indicator_corners" format="dimension" />
        <attr name="ht_tab_padding" format="dimension" />
        <attr name="ht_tab_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="refreshableView">
        <attr name="interceptAllMoveEvents" format="boolean" />
    </declare-styleable>
</resources>